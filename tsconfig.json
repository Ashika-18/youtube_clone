{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "generated/prisma/client": ["./src/generated/prisma"]
    }
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": ["node_modules"]
}
